{
  "scripts": {
    "build": "tsoa spec-and-routes",
    "start": "tsx src/main.ts",
    "build-and-start": "bun run build && bun run start",
    "dev": "onchange -i -k \"src/**/*.ts\" -- npm run build-and-start",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --experimental-specifier-resolution=node --no-warnings --silent --runInBand --config jest.config.cjs",
    "lint": "oxlint",
    "compile": "bun build ./src/main.ts --compile --production --sourcemap --bytecode --outfile ./build/glint-server --target bun"
  },
  "type": "module",
  "dependencies": {
    "@types/nodemailer": "^6.4.21",
    "bcrypt": "npm:bcryptjs@^3.0.3",
    "cookie-parser": "^1.4.7",
    "express": "^4.21.2",
    "glint-core": "github:vectorsquad/glint-core",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "~6.7.0",
    "nodemailer": "^6.10.1",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "tsx": "^4.20.6",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@shelf/jest-mongodb": "^4.3.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/react": "^18.3.27",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^29.7.0",
    "jest-axe": "^9.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-mocks-http": "^1.17.2",
    "onchange": "^7.1.0",
    "oxlint": "^0.6.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5"
  }
